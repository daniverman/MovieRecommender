<Window x:Class="MovieRecommender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieRecommender"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1025" ResizeMode="NoResize">
    <Grid Name="mainGrid">
        <Grid Name="openingPanel">
            <Grid.RowDefinitions>
                <RowDefinition Height="3*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
                <RowDefinition Height="4*"></RowDefinition>
                <RowDefinition Height="4*"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock FontSize="22" FontWeight="Bold" VerticalAlignment="Center" HorizontalAlignment="Center">Movies Recommender</TextBlock>
            <TextBlock FontSize="18" Grid.Row="1" Foreground="#000" Margin="10">in order to start you have to pick at least 5 of your favourites movies</TextBlock>
            <StackPanel Grid.Row="2">
                <Button HorizontalAlignment="Center" Padding="10" Margin="10" Click="Button_Click">Pick your favourite movies</Button>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
